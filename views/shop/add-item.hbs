<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <h1>Add an item</h1>
        <div class="alert alert-danger {{#if noError}}hidden{{/if}}" id="add-error">
          {{ errMsg }}
        </div>
        <form action="/additem" method="post" id="checkout-form">
            <div class="row">
                <div class="col-xs-12">
                   <div class="form-group">
                        <label for="path">Image Path</label>
                        <input type="text" id="path" class="form-control" required name="path">
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="itemname">Name of Item</label>
                        <input type="text" id="itemname" class="form-control" required name="itemname">
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="description">Description</label>
                        <input type="text" id="description" class="form-control" required name="description">
                    </div>
                </div>
                <hr>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="price">Price</label>
                        <input type="text" id="price" class="form-control" required name="price">
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-success">Add to roster</button>
        </form>
    </div>
</div>

<script type="text/javascript" src="/javascripts/jquery-3.1.1.min.js"></script>
<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
<script type="text/javascript" src="javascripts/checkout.js"></script>